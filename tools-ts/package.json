{
  "name": "eendraadschema-tools",
  "version": "1.0.0",
  "description": "YAML to EDS converter for eendraadschema (single-line electrical diagrams)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "eds-convert": "dist/cli.js",
    "yaml2eds": "dist/cli.js",
    "eds2yaml": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "yaml2eds": "tsx src/cli.ts yaml2eds",
    "eds2yaml": "tsx src/cli.ts eds2yaml"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pako": "^2.0.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
